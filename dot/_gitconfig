# vim:noet:
[alias]
	ca = commit -av
	ci = commit -v
	cim = commit -v -m
	co = checkout
	d = diff --color-words
	ds = diff --color-words --stat
	dc = diff --color-words --cached
	dcs = diff --color-words --stat --cached
	br = branch -v
	l = log --decorate --abbrev-commit
	ls = log --decorate --abbrev-commit --stat
	lt = log --decorate --abbrev-commit --oneline --graph --date=relative
	sm = submodule
	wc = whatchanged --decorate --abbrev-commit
	s = status -sb
	st = status -sb
	alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
	p = pull
	pr = pull --rebase
	spr = !git stash save -u -q && git pull --rebase && git stash pop -q
	au = add -u
	aa = add -A
	ap = add -p
	lp = log --decorate --abbrev-commit --patch
	roh = rebase -i origin/HEAD
[apply]
	whitespace = fix
[branch]
	autosetupmerge = true
[color]
	ui = auto
[color "branch"]
	remote = yellow
[color "status"]
	added = green
	untracked = red
	changed = yellow
	updated = green
[core]
	excludesfile = ~/.gitignore
	whitespace = fix
[credential]
[hub]
	protocol = https
	host = github.gds
[push]
	default = upstream
[user]
	name = Nick Stenning
	email = nick@whiteink.com
	signingkey = nick@whiteink.com

# Include any local config overrides
[include]
	path = ~/.localgitconfig
