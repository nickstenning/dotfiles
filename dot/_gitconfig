# vim:noet:
[alias]
	again = !git add -u && git commit --amend --no-edit
	ca = commit -av
	ci = commit -v
	cim = commit -v -m
	cleanup = !git branch --merged | fgrep -v '*' | fgrep -v 'master' | xargs -n1 git branch -d
	co = checkout
	d = diff
	ds = diff --stat
	dc = diff --cached
	dcs = diff --cached --stat
	br = branch -v
	l = log
	ls = log --stat
	lt = log --oneline --graph
	sm = submodule
	wc = whatchanged
	st = status
	alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
	p = pull
	pr = pull --rebase
	spr = !git stash save -u -q && git pull --rebase && git stash pop -q
	au = add -u
	aa = add -A
	ap = add -p
	lp = log --decorate --abbrev-commit --patch
	roh = rebase -i origin/HEAD
[apply]
	whitespace = fix
[branch]
	autosetupmerge = true
[color]
	ui = auto
[color "status"]
	changed = yellow
[core]
	excludesfile = ~/.gitignore
	whitespace = fix
[push]
	default = upstream
[log]
	date = iso
	abbrevCommit = true
	decorate = short
[status]
	short = true
	branch = true
[user]
	name = Nick Stenning
	email = nick@whiteink.com
	signingkey = nick@whiteink.com

# Include any local config overrides
[include]
	path = ~/.localgitconfig
